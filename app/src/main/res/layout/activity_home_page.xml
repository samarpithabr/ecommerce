<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".homePage">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/specs"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/specs">
    </ImageView>

    <ImageView
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_alignRight="@id/specs"
        android:src="@drawable/ic_baseline_favorite_24"></ImageView>
        <ImageView
           android:layout_below="@id/fav"
            android:layout_alignRight="@id/specs"
            android:id="@+id/nxt"
            android:src="@drawable/ic_baseline_next_plan_24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    </ImageView>
</RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evevy \n\n Full Rim Round,Cat-eyed Anti Glare Frame(48 \n mm)">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="$219  ">

            </TextView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$219  ">

            </TextView>
            <TextView
                android:textColor="#009E4D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="78 off  ">

            </TextView>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_margin="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        <Button
            android:layout_weight="1"
            android:textColor="@color/black"
            android:backgroundTint="#FFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add cart">

        </Button>
            <Button
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buy now"
                android:backgroundTint="#FF8C00">

        </Button>
        </LinearLayout>

</LinearLayout>